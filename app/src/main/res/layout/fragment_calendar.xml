<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mossige.finseth.follo.inf219_mitt_uib.fragments.CalendarFragment">

    <!-- MyCal content view. MyCal is put inside this view -->
    <LinearLayout
        android:id="@+id/calendar_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <!-- Agenda content view. Fragments with a days agendas are put inside this view -->
    <LinearLayout
        android:id="@+id/agenda_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" > <!-- Lower view fills rest of screen -->
    </LinearLayout>


</LinearLayout>
