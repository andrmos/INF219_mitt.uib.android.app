<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.preference.Preference
        android:key="favorite"
        android:title="@string/fav_course_title"
        android:summary="@string/fav_course_summary">
    </android.support.v7.preference.Preference>

    <android.support.v7.preference.Preference
        android:key="update_access_token"
        android:title="@string/access_token"
        android:summary="@string/change_access_token_summary">
    </android.support.v7.preference.Preference>

</android.support.v7.preference.PreferenceScreen>